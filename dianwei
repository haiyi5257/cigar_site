    <script>
        // 百度地图API功能
        function initMap() {
            // 创建地图实例
            var map = new BMap.Map("map");

            // 初始化地图，设置中心点坐标和地图级别（宁波市中心）
            var centerPoint = new BMap.Point(121.549792, 29.868388);
            map.centerAndZoom(centerPoint, 13);

            // 启用滚轮缩放
            map.enableScrollWheelZoom(true);

            // 添加地图类型控件
            map.addControl(new BMap.MapTypeControl());

            // 添加比例尺控件
            map.addControl(new BMap.ScaleControl());

            // 添加导航控件
            map.addControl(new BMap.NavigationControl());

            // 定义地铁1号线站点坐标（实际坐标需替换）
            var stations = [
                {name: "高桥西站", point: new BMap.Point(121.459, 29.915)},
                {name: "高桥站", point: new BMap.Point(121.476, 29.907)},
                {name: "梁祝站", point: new BMap.Point(121.492, 29.900)},
                {name: "芦港站", point: new BMap.Point(121.504, 29.892)},
                {name: "徐家漕长乐站", point: new BMap.Point(121.515, 29.885)},
                {name: "望春桥站", point: new BMap.Point(121.525, 29.878)},
                {name: "泽民站", point: new BMap.Point(121.535, 29.871)},
                {name: "大卿桥站", point: new BMap.Point(121.540, 29.868)},
                {name: "西门口站", point: new BMap.Point(121.545, 29.865)},
                {name: "鼓楼站", point: new BMap.Point(121.550, 29.876)},
                {name: "东门口站", point: new BMap.Point(121.556, 29.872)},
                {name: "江厦桥东站", point: new BMap.Point(121.565, 29.870)},
                {name: "舟孟北路站", point: new BMap.Point(121.575, 29.868)},
                {name: "樱花公园站", point: new BMap.Point(121.585, 29.865)},
                {name: "福明路站", point: new BMap.Point(121.595, 29.863)},
                {name: "世纪大道站", point: new BMap.Point(121.605, 29.860)},
                {name: "海晏北路站", point: new BMap.Point(121.615, 29.857)},
                {name: "福庆北路站", point: new BMap.Point(121.625, 29.854)},
                {name: "盛莫路站", point: new BMap.Point(121.635, 29.851)},
                {name: "东环南路站", point: new BMap.Point(121.645, 29.848)},
                {name: "邱隘东站", point: new BMap.Point(121.655, 29.845)},
                {name: "五乡站", point: new BMap.Point(121.665, 29.840)},
                {name: "宝幢站", point: new BMap.Point(121.675, 29.835)},
                {name: "邬隘站", point: new BMap.Point(121.685, 29.830)},
                {name: "大碶站", point: new BMap.Point(121.695, 29.825)},
                {name: "松花江路站", point: new BMap.Point(121.705, 29.820)},
                {name: "中河路站", point: new BMap.Point(121.715, 29.815)},
                {name: "长江路站", point: new BMap.Point(121.725, 29.810)},
                {name: "霞浦站", point: new BMap.Point(121.735, 29.805)}
            ];

            // 创建地铁线路路径点
            var pathPoints = stations.map(station => station.point);

            // 绘制地铁线路
            var polyline = new BMap.Polyline(pathPoints, {
                strokeColor: "#4fc3f7",
                strokeWeight: 6,
                strokeOpacity: 0.8
            });
            map.addOverlay(polyline);

            // 添加站点标记
            stations.forEach(station => {
                var marker = new BMap.Marker(station.point);
                map.addOverlay(marker);

                // 添加站点标签
                var label = new BMap.Label(station.name, {
                    position: station.point,
                    offset: new BMap.Size(20, -10)
                });
                label.setStyle({
                    color: "#fff",
                    backgroundColor: "#ff5252",
                    padding: "5px 10px",
                    border: "none",
                    borderRadius: "4px",
                    fontSize: "14px",
                    boxShadow: "0 2px 6px rgba(0,0,0,0.3)"
                });
                map.addOverlay(label);

                // 添加点击事件
                marker.addEventListener("click", function() {
                    map.panTo(station.point);
                    alert("您选择了站点: " + station.name);
                });
            });

            // 添加站点卡片点击事件
            document.querySelectorAll('.station-card').forEach(card => {
                card.addEventListener('click', function() {
                    const stationName = this.getAttribute('data-station');
                    const station = stations.find(s => s.name === stationName);

                    if (station) {
                        map.panTo(station.point);
                        map.setZoom(16);

                        // 高亮显示选中的站点
                        map.getOverlays().forEach(overlay => {
                            if (overlay instanceof BMap.Label && overlay.getContent() === stationName) {
                                overlay.setStyle({
                                    backgroundColor: "#ff8a80",
                                    fontWeight: "bold"
                                });
                                setTimeout(() => {
                                    overlay.setStyle({
                                        backgroundColor: "#ff5252",
                                        fontWeight: "normal"
                                    });
                                }, 2000);
                            }
                        });
                    }
                });
            });
        }

        // 页面加载完成后初始化地图
        window.onload = initMap;
    </script>

    <!-- 引入百度地图API（实际使用时需要替换为你的百度地图密钥） -->
    <script type="text/javascript" src="https://api.map.baidu.com/api?v=3.0&ak=nSxiPohfziUaCuONe4ViUP2N"></script>

